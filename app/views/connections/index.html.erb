<h1>Talent Connections</h1>
<% @connections.each do |connection| %>
    <div id="main" >
        <div class="card" >
            <img class="card-img-top" height="150" width="350" alt="Card image cap" />
                <div class="card-block">
                    <h4 class="card-title" id="company-title"><%= connection.company %></h4>
                    <p className="card-text"><%= connection.body %></p>
                          <a href="/connections/<%= connection.id %>"><button type='button' class="btn btn-danger"> Remove </button></a>
                        </div>
                      </div>
                  </div>
<% end %>

<h1>Employer Connections</h1>

<% @jobs.each do |job| %>
<% if current_user.email  == job.author %>
    <% @users.each do |user| %>
    <div id="main" >
        <div class="card" >
                <div class="card-block">
                    <h4 class="card-title" id="company-title"><%= user.name %></h4>
                    <p class="card-text">Email: <%= user.email %></p>
                          <a href="<%= user.resume %>"><button type='button' class="btn btn-success"> View Resume </button></a>
                          <button type='button' class="btn btn-danger"> Remove </button>
                        </div>
                      </div>
                  </div>
        <% end %>
    <% end %>
<% end %>